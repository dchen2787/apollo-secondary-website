<style>
  /* quick, lightweight polish */
  .page-hero { display:flex; align-items:center; gap:14px; margin:18px 0 8px; }
  .avatar {
    width:44px;height:44px;border-radius:50%;
    display:flex;align-items:center;justify-content:center;
    background:#eef4ff;color:#3353d1;font-weight:700;
  }
  .kpi { border-radius:16px; padding:14px; box-shadow:0 6px 14px rgba(0,0,0,.06); background:#fff; }
  .kpi h3 { font-size:14px; margin:0; color:#6b7280; }
  .kpi .v { font-size:22px; font-weight:800; margin-top:4px; }
  .badge-soft { background:#eef2ff; color:#3730a3; border-radius:999px; padding:2px 10px; font-size:12px; }
  .slot-card {
    border-radius:18px; padding:14px; background:#fff; margin-bottom:12px;
    box-shadow:0 4px 12px rgba(0,0,0,.07);
  }
  .slot-card .head { display:flex; gap:8px; align-items:center; flex-wrap:wrap; }
  .muted { color:#6b7280; }
  .pill { display:inline-block; padding:2px 10px; border-radius:999px; font-size:12px; }
  .pill-pcp { background:#ecfdf5; color:#065f46; }
  .pill-nonpcp { background:#fef3c7; color:#92400e; }
  .section-title { margin:22px 0 8px; display:flex; align-items:center; justify-content:space-between; }
  .searchbar { border-radius:12px; border:1px solid #e5e7eb; padding:10px 12px; width:100%; }
  .sticky-actions { position:sticky; top:10px; z-index:2; }
  .btn-soft { background:#111827; color:#fff; border:none; border-radius:12px; padding:8px 14px; }
  .btn-soft[disabled] { opacity:.55; cursor:not-allowed; }
  .btn-ghost { background:#f3f4f6; border:none; border-radius:12px; padding:8px 14px; }
  .alert { border-radius:14px; padding:10px 12px; margin:8px 0; }
