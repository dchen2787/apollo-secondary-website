    let myClaimed = 0; 
    let totalAvailable = 0;
    (slots || []).forEach(s => {
      if (!s.studentEmail) totalAvailable++;
      if (s.studentEmail && s.studentEmail === user.email) myClaimed++;
    });
    const maxAllowed = (typeof maxSlots !== "undefined" && maxSlots !== null) ? maxSlots : 100;
  %>

  <div class="row" style="gap:14px; margin:12px 0;">
    <div class="kpi col">
      <h3>Claimed</h3>
      <div class="v"><%= myClaimed %> / <%= maxAllowed %></div>
    </div>
    <div class="kpi col">
      <h3>Available Slots</h3>
      <div class="v"><%= totalAvailable %></div>
    </div>
    <div class="kpi col">
      <h3>Status</h3>
      <div class="v">
        <% if (confirmed) { %>Confirmed<% } else { %>Not confirmed<% } %>
      </div>
    </div>
  </div>

  <!-- Your matches -->
  <div class="section-title">
    <h2>Your Matches</h2>
  </div>

  <% 
    const mySlots = (slots || []).filter(s => s.studentEmail === user.email);
    if (mySlots.length === 0) { %>
      <div class="muted" style="margin-bottom:12px;">You haven’t claimed any slots yet.</div>
  <% } %>

  <% mySlots.forEach(function(slot){ %>
    <div class="slot-card">
      <div class="head">
        <strong><%= slot.physName || '—' %></strong>
        <% if (slot.physSpecialty) { %>
          <span class="badge-soft"><%= slot.physSpecialty %></span>
          <% if (['Family Medicine (PCP)','Primary Care'].includes((slot.physSpecialty||'').trim())) { %>
            <span class="pill pill-pcp">PCP</span>
          <% } else { %>
            <span class="pill pill-nonpcp">Non‑PCP</span>
          <% } %>
        <% } %>
      </div>
      <div class="muted" style="margin:6px 0;">
        <strong><%= slot.dDate || '-' %></strong> • <%= (slot.timeStart || '-') %> to <%= (slot.timeEnd || '-') %> • <%= slot.location || '-' %>
      </div>
      <div class="muted"><%= (slot.notes && slot.notes.trim()) ? slot.notes : '—' %></div>

      <div style="margin-top:10px;">
        <form action="/unclaim" method="post" style="display:inline;">
          <input type="hidden" name="userEmail" value="<%= user.email %>">
          <input type="hidden" name="slotId" value="<%= slot._id %>">
          <button type="submit" class="btn-ghost">Remove</button>
        </form>
      </div>
    </div>
  <% }); %>

  <!-- Search + Available -->
  <div class="section-title">
    <h2>Available Slots</h2>
    <input id="search" class="searchbar" placeholder="Search by physician, specialty, location, or notes…">
  </div>

  <% 
    const canClaimMore = myClaimed < maxAllowed;
    const matchingLocked = !!(controls && controls.matchingLocked);
    const PCPonly = !!(controls && controls.PCPonly);
  %>

  <% (slots || []).filter(s => !s.studentEmail).forEach(function(slot){ 
       const isPCP = ['Family Medicine (PCP)','Primary Care'].includes((slot.physSpecialty||'').trim());
       const claimDisabledReason =
         confirmed ? "You have already confirmed."
       : matchingLocked ? "Matching is locked."
       : PCPonly && !isPCP ? "PCP‑only is active."
       : !canClaimMore ? "You reached your max."
       : null;
  %>
    <div class="slot-card searchable"
         data-search="<%= [slot.physName, slot.physSpecialty, slot.location, slot.notes].filter(Boolean).join(' ').toLowerCase() %>">
      <div class="head">
        <strong><%= slot.physName || '—' %></strong>
        <% if (slot.physSpecialty) { %>
          <span class="badge-soft"><%= slot.physSpecialty %></span>
