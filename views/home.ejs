    </div>
    <div style="margin-left:auto;">
      <% if (!confirmed) { %>
        <form action="/confirm" method="post" class="sticky-actions">
          <input type="hidden" name="userEmail" value="<%= user.email %>">
          <button class="btn-soft">Confirm My Slots</button>
        </form>
      <% } %>
    </div>
  </div>

  <!-- KPIs -->
