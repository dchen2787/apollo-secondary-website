<%- include("./partials/header"); -%>

<style>
  :root {
    --congress-blue: #04488e;
    --danube: #74abdb;
  }

  body {
    color: black;
  }

  /* Gradient for Student Login button */
  .btn-apollo {
    background: linear-gradient(90deg, var(--danube), var(--congress-blue));
    color: white !important;
  }

  .btn-apollo:hover {
    background: linear-gradient(90deg, #84bce6, #0559a8);
    color: white !important;
  }
</style>

<div class="container" style="margin-top:40px;">
  <h1>Welcome to Apollo's Match Portal!</h1>

  <form action="/login" method="get" style="margin-top:20px;">
    <button class="btn btn-lg btn-apollo" type="submit">
      Student Login <i class="fas fa-arrow-right"></i>
    </button>
  </form>

  <form action="/activate" method="get" style="margin-top:15px;">
    <button class="btn btn-lg btn-secondary" type="submit">
      Activate Account <i class="fas fa-arrow-right"></i>
    </button>
  </form>

  <form action="/admin-login" method="get" style="margin-top:15px;">
    <button class="btn btn-lg btn-secondary" type="submit">
      Admin Login
    </button>
  </form>
</div>

<%- include("./partials/footer"); -%>
