<%- include("./partials/header"); -%>

<style>
  :root{
    --congress-blue: #04488e;
    --danube: #74abdb;
    --iron: #dbdbdc;
    --cadet-blue: #a4b4c4;
    --bermuda-gray: #6c8cac;
    --wild-sand: #f6f6f6;
    --pigeon-post: #aac6db;
    --danube2: #64a4d1;
    --rock-blue: #a4b4cc;
    --catskill-white: #ebf4f5;

    --bg1: var(--wild-sand);
    --bg2: var(--catskill-white);
    --ink: var(--congress-blue);
    --muted: var(--bermuda-gray);
    --brand: var(--congress-blue);
    --card: #ffffff;
    --ring: var(--iron);
  }

  body {
    background: radial-gradient(1200px 600px at 20% -10%, var(--bg2), transparent) , var(--bg1);
  }

  .wrap { max-width: 1100px; margin: 0 auto; padding: 28px 16px 64px; }

  .topbar {
    display:flex; align-items:center; gap:14px; padding:14px 0 18px; margin-bottom:14px;
    border-bottom:1px solid var(--ring);
  }
  .title { font-size:38px; font-weight:800; color:var(--ink); }

  .hero { margin: 22px 0 12px; }
  .hero h1 { font-size:44px; line-height:1.1; margin:0 0 18px; font-weight:800; color:var(--ink); }
  .subtle { color:var(--muted); margin-top:8px; }

  .cta { display:flex; flex-direction:column; gap:16px; max-width: 360px; }

  .btn-xl {
    display:flex; align-items:center; justify-content:space-between; gap:12px;
    border:none; border-radius:14px; padding:14px 16px; width:100%;
    background:var(--card); box-shadow:0 10px 30px rgba(2,6,23,.08);
    font-weight:700; color:var(--ink); border:1px solid var(--ring);
    transition: transform .04s ease, box-shadow .2s ease, border-color .2s ease;
  }
  .btn-xl:hover { transform: translateY(-1px); box-shadow:0 14px 36px rgba(2,6,23,.12); border-color:var(--cadet-blue); }

  .btn-brand { background:linear-gradient(180deg, var(--danube), var(--congress-blue)); color:#fff; border:0; }
  .btn-ghost { background:var(--catskill-white); }
  .btn-xl .icon {
    width:28px;height:28px;border-radius:999px;background:rgba(255,255,255,.25);
    display:flex;align-items:center;justify-content:center; font-size:18px;
  }

  @media (min-width: 900px){
    .grid { display:grid; grid-template-columns: 1.2fr .8fr; gap:36px; align-items:center; }
  }
</style>

<div class="wrap">
  <div class="topbar">
    <div class="title">The Match</div>
  </div>

  <div class="grid">
    <div class="hero">
      <h1>Welcome to Apollo’s Match Portal!</h1>
      <p class="subtle">Log in or activate your account to view and manage shadowing slots.</p>
    </div>

    <div class="cta">
      <form action="/login" method="get">
        <button class="btn-xl btn-brand" type="submit">
          Student Login
          <span class="icon">➜</span>
        </button>
      </form>

      <form action="/activate-account" method="get">
        <button class="btn-xl" type="submit">
          Activate Account
          <span class="icon">➜</span>
        </button>
      </form>

      <form action="/admin-login" method="get">
        <button class="btn-xl btn-ghost" type="submit">
          Admin Login
          <span class="icon">⚙︎</span>
        </button>
      </form>
    </div>
  </div>
</div>

<%- include("./partials/footer"); -%>
