<%- include("./partials/header"); -%>

<style>
  :root{ --ring:#e5e7eb; --ink:#0f172a; --muted:#64748b; }
  body { background: linear-gradient(180deg, #eef2ff, #f8fafc); }
  .wrap { max-width: 820px; margin: 0 auto; padding: 32px 16px 64px; }
  .card { background:#fff; border:1px solid var(--ring); border-radius:18px; box-shadow:0 10px 30px rgba(2,6,23,.08); padding:28px; }
  .title { font-size:28px; font-weight:800; color:var(--ink); margin:0 0 8px; }
  .muted { color:#64748b; margin-bottom:18px; }
  .form-group{ margin-bottom:14px; }
  .input { width:100%; border:1px solid var(--ring); border-radius:12px; padding:12px 14px; }
  .input:focus{ border-color:#93c5fd; box-shadow:0 0 0 4px rgba(147,197,253,.35); outline:none; }
  .btn { border:none; border-radius:12px; padding:12px 14px; font-weight:700; background:#111827; color:#fff; }
  .alert { background:#fef2f2; color:#b91c1c; border:1px solid #fecaca; padding:10px 12px; border-radius:12px; margin-bottom:12px; }
</style>

<div class="wrap">
  <a href="/">&larr; Back</a>
  <div class="card">
    <h1 class="title">Admin Login</h1>
    <p class="muted">This is for Apollo Youth in Medicine leaders only.</p>

    <% if (typeof errM !== 'undefined' && errM) { %>
      <div class="alert"><%= errM %></div>
    <% } %>

    <form action="/admin-login" method="post" autocomplete="on">
      <div class="form-group">
        <label>Email</label>
        <input class="input" type="email" name="email" required autocomplete="email">
      </div>
      <div class="form-group">
        <label>Password</label>
        <input class="input" type="password" name="password" required autocomplete="current-password">
      </div>
      <button class="btn" type="submit">Sign in</button>
    </form>
  </div>
</div>

<%- include("./partials/footer"); -%>
