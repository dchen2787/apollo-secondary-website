    <!-- Right: Slots -->
    <div>
      <div class="card">
        <h3 style="margin-top:0;">Claimed Slots (<%= claimed.length %>)</h3>
        <% if (!claimed.length) { %><div class="muted">No claimed slots.</div><% } %>
        <% claimed.forEach(function(sl){ %>
          <div class="slot">
            <div><b><%= sl.physName || '—' %></b> <span class="muted"><%= sl.physSpecialty || '' %></span></div>
