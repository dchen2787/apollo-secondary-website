<style>
  :root{
    --congress-blue: #04488e;
    --danube: #74abdb;
    --iron: #dbdbdc;
    --cadet-blue: #a4b4c4;
    --bermuda-gray: #6c8cac;
    --wild-sand: #f6f6f6;
    --pigeon-post: #aac6db;
    --danube2: #64a4d1;
    --rock-blue: #a4b4cc;
    --catskill-white: #ebf4f5;
  }

  body {
    background: var(--wild-sand);
    color: black;
  }

  .login-card {
    background: white;
    padding: 20px;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.08);
    max-width: 400px;
    margin: auto;
  }

  .btn {
    width: 100%;
    padding: 12px;
    border: none;
    border-radius: 8px;
    font-weight: bold;
    font-size: 16px;
    color: #fff;
    background: linear-gradient(90deg, var(--danube), var(--congress-blue));
    cursor: pointer;
    transition: transform 0.05s ease, box-shadow 0.2s ease;
  }

  .btn:hover {
    transform: translateY(-1px);
    box-shadow: 0 6px 14px rgba(0,0,0,0.15);
  }

  input[type="email"],
  input[type="password"] {
    width: 100%;
    padding: 10px;
    margin: 6px 0 12px;
    border: 1px solid var(--iron);
    border-radius: 6px;
  }

  h1, h2, h3, label {
    color: black;
  }
</style>

<div id="login-page">
  <h1>Student Login</h1>
  <div id="login-container" class="container">
    <div class="login-card">
      <h2>Log In</h2>
      <h3><%= errM %></h3>
      <form action="/login" method="post">
        <input class="top-input" type="email" name="email" placeholder="Email" required>
        <input class="btm-input" type="password" name="password" placeholder="Password" required>
        <button type="submit" class="btn">Submit</button>
      </form>
    </div>
  </div>
</div>

<%- include("./partials/footer"); -%>
