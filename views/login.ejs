<%- include("./partials/header"); -%>

<style>
  :root{
    --congress-blue: #04488e;
    --danube: #74abdb;      /* light brand blue */
    --iron: #dbdbdc;        /* light gray border */
    --cadet-blue: #a4b4c4;
    --bermuda-gray: #6c8cac;
    --wild-sand: #f6f6f6;   /* page bg */
    --pigeon-post: #aac6db; /* soft panel tint */
    --danube2: #64a4d1;     /* alt light blue */
    --rock-blue: #a4b4cc;
    --catskill-white: #ebf4f5; /* very light teal */
  }

  /* Page */
  body { background: var(--wild-sand); color:#000; }
  .wrap {
    min-height: calc(100vh - 60px);
    display: grid;
    place-items: start center;
    padding: 40px 16px 80px;
  }
  h1 { text-align:center; font-weight:800; margin: 6px 0 24px; color:#000; }

  /* Pretty panel */
  .panel {
    width: 560px; max-width: 100%;
    border-radius: 18px;
    background: linear-gradient(155deg, var(--catskill-white), var(--pigeon-post));
    border: 1px solid var(--iron);
    box-shadow:
      0 18px 50px rgba(4,72,142,.10),
      0 6px 20px rgba(0,0,0,.06);
    padding: 26px;
  }
  .panel h2 { margin: 0 0 16px; font-weight:800; color:#000; }

  /* Form bits */
  .field { margin-bottom: 14px; }
  .label { font-weight: 600; margin-bottom: 6px; display:block; color:#000; }
  .input-wrap { position:relative; }
  .input {
    width: 100%;
    border: 1px solid var(--iron);
    background: #fff;
    border-radius: 10px;
    padding: 12px 14px;
    font-size: 16px;
    color:#000;
    box-shadow: inset 0 1px 0 rgba(0,0,0,.02);
  }
  .input:focus { outline: none; border-color: var(--danube2); box-shadow: 0 0 0 3px rgba(100,164,209,.25); }

  /* Show/Hide password button */
  .toggle {
    position:absolute; right:8px; top:50%; transform:translateY(-50%);
    border:0; background:transparent; cursor:pointer;
    padding:6px 8px; border-radius:8px; color:#04488e;
  }
  .toggle:focus { outline:none; box-shadow: 0 0 0 3px rgba(100,164,209,.25); }

  /* Submit */
  .btn {
    display:block; width:100%;
    border-radius: 12px;
    padding: 12px 16px;
    border: 1px solid #033c76;
    color:#fff; font-weight:800; letter-spacing:.2px;
    background: linear-gradient(90deg, var(--danube), var(--congress-blue));
    box-shadow: 0 6px 18px rgba(4,72,142,.25);
    transition: transform .05s ease, box-shadow .15s ease, filter .15s ease;
  }
  .btn:hover { transform: translateY(-1px); box-shadow: 0 10px 26px rgba(4,72,142,.28); filter: brightness(1.03); }
  .btn:active { transform: translateY(0); }

  /* Errors */
  .alert {
    margin: 0 0 12px; border-radius: 10px; padding: 10px 12px;
    background: #fde2e2; color:#7a1f1f; border:1px solid #f5bcbc;
  }

  /* Keep panel slightly left so the big headline feels centered on wide screens */
  @media (min-width: 1100px){
    .wrap { place-items: start center; }
    .panel { margin-left: -160px; }
  }
</style>

<div class="wrap">
  <div>
    <h1>Student Login</h1>

    <% if (typeof errM !== 'undefined' && errM) { %>
      <div class="alert"><%= errM %></div>
    <% } %>
    <% if (typeof errM2 !== 'undefined' && errM2) { %>
      <div class="alert"><%= errM2 %></div>
    <% } %>

    <div class="panel">
      <h2>Log In</h2>
      <form action="/login" method="post" novalidate>
        <div class="field">
          <label class="label" for="email">Email</label>
          <input class="input" id="email" type="email" name="email" placeholder="you@example.com" required>
        </div>

        <div class="field">
          <label class="label" for="password">Password</label>
          <div class="input-wrap">
            <input class="input" id="password" type="password" name="password" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢" required>
            <button type="button" class="toggle" id="pwToggle" aria-label="Show password">üëÅ</button>
          </div>
        </div>

        <div class="field" style="margin-top:18px;">
          <button class="btn" type="submit">Submit</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  // Show / Hide password
  (function(){
    const input  = document.getElementById('password');
    const toggle = document.getElementById('pwToggle');
    if (!input || !toggle) return;

    function update() {
      const isPw = input.type === 'password';
      input.type = isPw ? 'text' : 'password';
      toggle.textContent = isPw ? 'üôà' : 'üëÅ';
      toggle.setAttribute('aria-label', isPw ? 'Hide password' : 'Show password');
    }
    toggle.addEventListener('click', update);
  })();
</script>

